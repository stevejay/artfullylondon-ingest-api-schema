{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.artfully.london/v1/venue.json",
    "type": "object",
    "properties": {
        "id": {
            "title": "Venue ID",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/componentId"
                }
            ]
        },
        "version": {
            "title": "Version",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/version"
                }
            ]
        },
        "entityStatus": {
            "title": "Entity Status",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/entityStatus"
                }
            ]
        },
        "title": {
            "title": "Title",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/title"
                }
            ]
        },
        "url": {
            "title": "URL",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/url"
                }
            ]
        },
        "description": {
            "title": "Description",
            "type": "string",
            "minLength": 1
        },
        "descriptionCredit": {
            "title": "Description Credit",
            "type": "string",
            "minLength": 1
        },
        "address": {
            "title": "Address",
            "type": "string",
            "minLength": 1
        },
        "postcode": {
            "title": "Postcode",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/ukPostcode"
                }
            ]
        },
        "latitude": {
            "title": "Latitude",
            "type": "number",
            "minimum": -90,
            "maximum": 90
        },
        "longitude": {
            "title": "Longitude",
            "type": "number",
            "minimum": -180,
            "maximum": 180
        },
        "email": {
            "title": "Email",
            "type": "string",
            "format": "email"
        },
        "telephone": {
            "title": "Telephone",
            "type": "string",
            "minLength": 1
        },
        "wheelchairAccess": {
            "title": "Wheelchair Access Type",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/wheelchairAccess"
                }
            ]
        },
        "disabledBathroom": {
            "title": "Disabled Bathroom Type",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/disabledBathroom"
                }
            ]
        },
        "hearingFacilities": {
            "title": "Hearing Facilities Type",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/hearingFacilities"
                }
            ]
        },
        "hasPermanentCollection": {
            "title": "Has Permanent Collection",
            "type": "boolean"
        },
        "openingRules": {
            "title": "Opening Rules",
            "allOf": [
                {
                    "$ref": "rules-types.json#/definitions/openingRules"
                }
            ]
        },
        "closingRules": {
            "title": "Closing Rules",
            "allOf": [
                {
                    "$ref": "rules-types.json#/definitions/closingRules"
                }
            ]
        },
        "images": {
            "title": "Image URLs",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/images"
                }
            ]
        },
        "rawContent": {
            "title": "Raw Content",
            "description": "The information to monitor for changes",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/rawContent"
                }
            ]
        },
        "oldRawContent": {
            "title": "Old Raw Content",
            "description": "Previous version of the information to monitor for changes",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/rawContent"
                }
            ]
        }
    },
    "required": [
        "id",
        "version",
        "entityStatus",
        "title",
        "url",
        "address",
        "postcode",
        "latitude",
        "longitude",
        "wheelchairAccess",
        "disabledBathroom",
        "hearingFacilities",
        "openingRules",
        "closingRules",
        "hasPermanentCollection",
        "rawContent"
    ]
}