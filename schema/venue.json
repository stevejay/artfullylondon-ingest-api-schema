        "publishedWatchedContent": {
            "title": "Published Watched Content",
            "allOf": [
                {
                    "$ref": "basic-types.json#/definitions/watchedContent"
                }
            ]
        }
    },
    "required": [
        "id",
        "version",
        "entityStatus",
        "title",
        "address",
        "postcode",
        "areaOfLondon",
        "latitude",
        "longitude",
        "wheelchairAccess",
        "disabledBathroom",
        "hearingFacilities",
        "hasPermanentCollection"
    ],
    "additionalProperties": false
