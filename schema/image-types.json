{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.artfully.london/v1/image-types.json",
    "definitions": {
        "imageUrls": {
            "type": "array",
            "items": {
                "title": "Image URL",
                "type": "string",
                "format": "uri"
            },
            "minItems": 1
        },
        "images": {
            "type": "array",
            "items": {
                "title": "Image",
                "type": "object",
                "properties": {
                    "id": {
                        "title": "Image ID",
                        "allOf": [
                            {
                                "$ref": "basic-types.json#/definitions/uuid"
                            }
                        ]
                    },
                    "ratio": {
                        "title": "Image Ratio",
                        "type": "number",
                        "minimum": 0
                    },
                    "dominantColor": {
                        "title": "Dominant Color",
                        "description": "Color as an RGB hex value",
                        "type": "string",
                        "pattern": "^[A-Fa-f0-9]{6}$",
                        "examples": [
                            "FF00AA"
                        ]
                    }
                },
                "required": [
                    "id",
                    "ratio"
                ],
                "additionalProperties": false
            },
            "minItems": 1
        }
    }
}